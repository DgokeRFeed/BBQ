<% errors = model.errors %>

<% if errors.any? %>
<div class="row">
  <div class="alert alert-danger d-flex justify-content-between align-content-center">
    <div>
      <div class="h4 buffer-bottom">
        В вашей форме <%= errors.count
                          t :errors, count: errors.count %>
      </div>
      <ul>
        <% errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
</div>
<% end %>
