<%= form_with model: [@event, comment], data: { turbo: false } do |form| %>
  <%= render partial: "partials/form_errors", locals: { model: comment } %>

  <div class="mt-3">
    <%= form.label :body, class: "form-label text-primary h4" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <% unless signed_in? %>
    <div class="mt-3">
      <%= form.label :user_name, class: "form-label text-primary h4" %>
      <%= form.text_field :user_name, class: "form-control" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= recaptcha_tags unless current_user.present? %>
  </div>

  <div class="mt-3">
    <%= form.submit "Отправить", class: "btn btn-primary"%>
  </div>
<% end %>
