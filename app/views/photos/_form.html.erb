<%= form_with model: [@event, photo], html: { multipart: true }, data: { turbo: false } do |form| %>
  <%= render partial: "partials/form_errors", locals: { model: photo } %>

  <div class="mt-3">
    <%= form.label :photo, class: "form-label text-primary h4" %>
    <%= form.file_field :photo, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.submit "Отправить", class: "btn btn-primary" %>
  </div>
<% end %>
