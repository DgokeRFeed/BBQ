<div class="col-lg-6 col-md-6">
  <h1 class="mt-3">Забыли пароль?</h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :post }, data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mt-3">
      <%= f.label :email, "Email", class: "form-label text-primary h4" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= f.submit "Отправить инструкцию по восстановлению", class: "btn btn-lg btn-primary" %>
    </div>
  <% end %>
  <div class="h5 mt-3">
    <%= render "devise/shared/links"%>
  </div>
</div>
