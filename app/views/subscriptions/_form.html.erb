<%= form_with model: [@event, subscription], data: { turbo: false } do |form| %>
  <%= render partial: "partials/form_errors", locals: { model: subscription } %>

  <% unless signed_in? %>
    <div class="mt-3">
      <%= form.label :user_name, "Имя", class: "form-label text-primary h4" %>
      <%= form.text_field :user_name, class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= form.label :user_email, "Email", class: "form-label text-primary h4" %>
      <%= form.text_field :user_email, class: "form-control" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.submit "Подписаться", class: "btn btn-primary"%>
  </div>
<% end %>
