<div class="col-lg-6 col-md-6">

  <h1 class="mt-3">Регистрация</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mt-3">
      <%= f.label :name, "Имя", class: "form-label text-primary h4" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= f.label :username, "Никнейм на сайте", class: "form-label text-primary h4" %>
      <%= f.text_field :username, autocomplete: "username", class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= f.label :email, "Email", class: "form-label text-primary h4" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= f.label :password, "Пароль", class: "form-label text-primary h4" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <div id="passwordHelpBlock" class="form-text">
        Ваш пароль должен состоять минимум из 6 символов
      </div>
    </div>

    <div class="mt-3">
      <%= f.label :password_confirmation, "Подтвердите пароль", class: "form-label text-primary h4" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= f.submit "Зарегистрироваться", class: "btn btn-lg btn-primary" %>
    </div>
  <% end %>
  <div class="h5 mt-3">
    <%= render "devise/shared/links"%>
  </div>
</div>
