<%= render partial: "partials/form_errors", locals: { model: event } %>

<%= form_for event do |form| %>
  <div class="mt-3">
    <%= form.label :title, "Событие", class: "form-label text-primary h4" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= form.label :address, "Адрес", class: "form-label text-primary h4" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= form.label :datetime, "Дата", class: "form-label text-primary h4" %>
    <%= form.datetime_select :datetime, class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= form.label :description, "Описание", class: "form-label text-primary h4" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="mt-3">
    <%= form.submit "Сохранить", class: "btn btn-primary"%> или <%= link_to "Вернуться", :back %>
  </div>
<% end %>
